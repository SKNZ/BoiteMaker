project BoiteMaker is
    for Source_Dirs use ("src");
    for Object_Dir use "obj";
    for Exec_Dir use "bin";
    for Main use ("boites");

    package Builder is
        for Default_Switches ("Ada") use ("-g");
    end Builder;

    package Compiler is
        for Default_Switches ("Ada")
            use ("-gnato", "-fstack-check", "-gnat05");
    end Compiler;
end BoiteMaker;
